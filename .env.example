class AutoCurrencyExchange:
    """ìë™ í™˜ì „ ì‹œìŠ¤í…œ"""
    
    def __init__(self):
        self.exchange_rates = {}
        self.last_update = None
        self.update_interval = 300  # 5ë¶„ë§ˆë‹¤ ì—…ë°ì´íŠ¸
        self.api_key = os.getenv('EXCHANGE_RATE_API_KEY', '')
        
    async def update_exchange_rates(self) -> bool:
        """í™˜ìœ¨ ì •ë³´ ì—…ë°ì´íŠ¸"""
        try:
            # ì—¬ëŸ¬ API ì†ŒìŠ¤ ì‚¬ìš© (ë¬´ë£Œ + ìœ ë£Œ)
            rates = await self._fetch_from_multiple_sources()
            
            if rates:
                self.exchange_rates = {
                    'USD': Currency('USD', 'ë¯¸êµ­ ë‹¬ëŸ¬', '$', rates.get('USD', 1300), datetime.now()),
                    'JPY': Currency('JPY', 'ì¼ë³¸ ì—”', 'Â¥', rates.get('JPY', 10), datetime.now()),
                    'INR': Currency('INR', 'ì¸ë„ ë£¨í”¼', 'â‚¹', rates.get('INR', 16), datetime.now()),
                    'KRW': Currency('KRW', 'í•œêµ­ ì›', 'â‚©', 1.0, datetime.now())
                }
                self.last_update = datetime.now()
                logger.info(f"ğŸ’± í™˜ìœ¨ ì—…ë°ì´íŠ¸: USD={rates.get('USD'):.0f}, JPY={rates.get('JPY'):.1f}, INR={rates.get('INR'):.1f}")
                return True
            
            return False
            
        except Exception as e:
            logger.error(f"í™˜ìœ¨ ì—…ë°ì´íŠ¸ ì‹¤íŒ¨: {e}")
            return False
    
    async def _fetch_from_multiple_sources(self) -> Dict[str, float]:
        """ë‹¤ì¤‘ ì†ŒìŠ¤ì—ì„œ í™˜ìœ¨ ì •ë³´ ìˆ˜ì§‘"""
        rates = {}
        
        # 1. í•œêµ­ì€í–‰ API (ê¸°ë³¸)
        try:
            bok_rates = await self._fetch_from_bok()
            if bok_rates:
                rates.update(bok_rates)
        except Exception as e:
            logger.debug(f"í•œêµ­ì€í–‰ API ì‹¤íŒ¨: {e}")
        
        # 2. ExchangeRate-API (ë°±ì—…)
        try:
            if not rates and self.api_key:
                er_rates = await self._fetch_from_exchangerate_api()
                if er_rates:
                    rates.update(er_rates)
        except Exception as e:
            logger.debug(f"ExchangeRate-API ì‹¤íŒ¨: {e}")
        
        # 3. ê³ ì •ê°’ (ìµœí›„ ìˆ˜ë‹¨)
        if not rates:
            rates = {'USD': 1300, 'JPY': 9.5, 'INR': 16}
            logger.warning("âš ï¸ ê³ ì • í™˜ìœ¨ ì‚¬ìš©")
        
        return rates
    
    async def _fetch_from_bok(self) -> Dict[str, float]:
        """í•œêµ­ì€í–‰ í™˜ìœ¨ API"""
        try:
            url = "https://www.bok.or.kr/portal/singl/openapi/exchangeJSON.do"
            params = {
                'lang': 'ko',
                'per': 'day',
                'keytype': 'json'
            }
            
            async with aiohttp.ClientSession() as session:
                async with session.get(url, params=params, timeout=10) as response:
                    if response.status == 200:
                        data = await response.json()
                        
                        rates = {}
                        for item in data:
                            if item['CUR_UNIT'] == 'USD':
                                rates['USD'] = float(item['DEAL_BAS_R'].replace(',', ''))
                            elif item['CUR_UNIT'] == 'JPY(100)':
                                rates['JPY'] = float(item['DEAL_BAS_R'].replace(',', '')) / 100
                            elif item['CUR_UNIT'] == 'INR':
                                rates['INR'] = float(item['DEAL_BAS_R'].replace(',', ''))
                        
                        return rates
        except Exception as e:
            logger.debug(f"í•œêµ­ì€í–‰ API ì˜¤ë¥˜: {e}")
        
        return {}
    
    async def _fetch_from_exchangerate_api(self) -> Dict[str, float]:
        """ExchangeRate-API (ìœ ë£Œ)"""
        try:
            url = f"https://v6.exchangerate-api.com/v6/{self.api_key}/latest/KRW"
            
            async with aiohttp.ClientSession() as session:
                async with session.get(url, timeout=10) as response:
                    if response.status == 200:
                        data = await response.json()
                        conversion_rates = data['conversion_rates']
                        
                        return {
                            'USD': 1 / conversion_rates['USD'],
                            'JPY': 1 / conversion_rates['JPY'],
                            'INR': 1 / conversion_rates['INR']
                        }
        except Exception as e:
            logger.debug(f"ExchangeRate-API ì˜¤ë¥˜: {e}")
        
        return {}
    
    def convert_to_krw(self, amount: float, from_currency: str) -> float:
        """ë‹¤ë¥¸ í†µí™”ë¥¼ ì›í™”ë¡œ ë³€í™˜"""
        try:
            if from_currency == 'KRW':
                return amount
            
            if from_currency in self.exchange_rates:
                rate = self.exchange_rates[from_currency].exchange_rate
                return amount * rate
            else:
                logger.warning(f"âš ï¸ í™˜ìœ¨ ì •ë³´ ì—†ìŒ: {from_currency}")
                return amount
        
        except Exception as e:
            logger.error(f"í™˜ì „ ì‹¤íŒ¨: {e}")
            return amount
    
    def convert_from_krw(self, krw_amount: float, to_currency: str) -> float:
        """ì›í™”ë¥¼ ë‹¤ë¥¸ í†µí™”ë¡œ ë³€í™˜"""
        try:
            if to_currency == 'KRW':
                return krw_amount
            
            if to_currency in self.exchange_rates:
                rate = self.exchange_rates[to_currency].exchange_rate
                return krw_amount / rate
            else:
                logger.warning(f"âš ï¸ í™˜ìœ¨ ì •ë³´ ì—†ìŒ: {to_currency}")
                return krw_amount
        
        except Exception as e:
            logger.error(f"í™˜ì „ ì‹¤íŒ¨: {e}")
            return krw_amount
    
    def get_exchange_rate(self, currency: str) -> Optional[float]:
        """í™˜ìœ¨ ì¡°íšŒ"""
        if currency in self.exchange_rates:
            return self.exchange_rates[currency].exchange_rate
        return None

